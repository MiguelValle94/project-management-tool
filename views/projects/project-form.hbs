<div id="form" class="w-100 ">
    <h4>NEW PROJECT:</h4>
    <form action="/new-project" method="POST" enctype="multipart/form-data">

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="input-content" name="title" placeholder="Title" class="w-100">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="input-content" name="description" placeholder="Title" class="w-100">
        </div>

        <div class="form-group">
            <label for="link">Link</label>
            <input type="text" id="input-content" name="link" placeholder="Link to Project" class="w-100">
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" id="input-content" name="image" placeholder="Image" class="w-100">
        </div>

        <button type="submit" class="btn btn-primary mt-3 mb-4">Create project</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>